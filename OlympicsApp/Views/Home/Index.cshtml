@model OlympicsListViewModel
@{
    ViewData["Title"] = "Olympics Countries";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameID"
                   asp-route-activeSport="@Model.ActiveSport"
                   class="list-group-item @Model.CheckActiveGame(game.GameID)">@game.Name</a>
            }
        </div>
        <h3 class="mt-3">Sports</h3>
        <div class="list-group">
            @foreach (Sport sport in Model.Sports)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeSport="@sport.SportID"
                   class="list-group-item @Model.CheckActiveSport(sport.SportID)">@sport.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button class="bg-light border-0 m-1" type="submit">
                            <img src="@Url.Content(country.FlagImage)" alt="@country.FlagImage" width=150 height=75
                                 title="@country.Name | @country.Game.Name @country.Sport.Name" />
                        </button>
                        <input type="hidden" asp-for="@country.CountryID" />
                        <input type="hidden" asp-for="ActiveGame" />
                        <input type="hidden" asp-for="ActiveSport" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>